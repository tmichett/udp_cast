# Example Ansible Inventory File for UDP Cast Script
# Copy this to /etc/ansible/inventory/foundation and modify for your environment

[Foundation]
# List your Foundation group hosts here
# You can use hostnames or IP addresses
server01.foundation.local
server02.foundation.local ansible_host=192.168.1.101
server03.foundation.local ansible_host=192.168.1.102
server04.foundation.local ansible_host=192.168.1.103
server05.foundation.local ansible_host=192.168.1.104

# Alternative format with IP addresses directly
# 192.168.1.105
# 192.168.1.106
# 192.168.1.107

[Foundation:vars]
# Common variables for all hosts in Foundation group
ansible_user=root
ansible_ssh_private_key_file=/root/.ssh/id_rsa
# ansible_ssh_common_args='-o StrictHostKeyChecking=no'

# You can also define other groups and use them by specifying -g groupname
[WebServers]
web01.foundation.local
web02.foundation.local

[DatabaseServers]
db01.foundation.local
db02.foundation.local

# Group of groups
[AllServers:children]
Foundation
WebServers
DatabaseServers
